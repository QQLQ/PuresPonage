#include<iostream>
#include<string>

int main(void)
{
  using namespace std;
  string word;
  int words=0;
  cout<<"Enter words (to stop,type the word done):"<<endl;
  cin>>word;
  while (word!="done")
   {
     words++;
     cin>>word;
   }
  cout<<"You entered a total of "<<words<<" words."<<endl;
  return 0;
}
